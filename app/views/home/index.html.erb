<div class="flex items-center justify-center h-full">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Busca por CEP</h1>
    <%= form_with url: root_path, method: :get, local: true, class: "space-y-4", id: "cep-form" do %>
      <div>
        <%= text_field_tag :cep, nil, placeholder: "Digite o CEP", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "cep-input" %>
      </div>
    <% end %>
  </div>
</div>
